<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:padding="25dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gradient_rounded_background"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade"
        android:layout_below="@id/backButton"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your experience"
        android:layout_below="@id/t1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/starterLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginVertical="4dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:orientation="vertical"

        android:background="@drawable/gradient_rounded_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starter"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improve Quiz generation"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <com.paypal.checkout.paymentbutton.PaymentButtonContainer
            android:id="@+id/payment_button_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paypal_button_color="silver"
            app:paypal_button_label="pay"
            app:paypal_button_shape="rectangle"
            app:paypal_button_size="large"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:paypal_button_enabled="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/interLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/starterLine"
        android:layout_marginVertical="4dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:orientation="vertical"

        android:background="@drawable/gradient_rounded_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller!"
                android:background="@drawable/best_seller_background"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improve Quiz generation"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <com.paypal.checkout.paymentbutton.PaymentButtonContainer
            android:id="@+id/payment_button_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paypal_button_color="silver"
            app:paypal_button_label="pay"
            app:paypal_button_shape="rectangle"
            app:paypal_button_size="large"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:paypal_button_enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/advancedLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/interLine"
        android:layout_marginVertical="4dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:orientation="vertical"

        android:background="@drawable/gradient_rounded_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Improve Quiz generation"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <com.paypal.checkout.paymentbutton.PaymentButtonContainer
            android:id="@+id/payment_button_container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paypal_button_color="silver"
            app:paypal_button_label="pay"
            app:paypal_button_shape="rectangle"
            app:paypal_button_size="large"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:paypal_button_enabled="true" />
    </LinearLayout>



</RelativeLayout>
